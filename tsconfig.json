{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "rootDir": "./src",
    "outDir": "./dist",

    "allowJs": true,
    "checkJs": false,

    "resolveJsonModule": true
  },
  "include": ["src"]
}

