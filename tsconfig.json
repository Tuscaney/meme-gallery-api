{
  "compilerOptions": {
    // ESM + ts-node friendly
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    // Project layout
    "rootDir": "./src",
    "outDir": "./dist",

    // Interop & convenience
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,

    // Type safety & speed
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    // Node type definitions in editor/tsc
    "types": ["node"]
  },
  "include": ["src"]
}


