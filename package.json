{
  "name": "meme-gallery-api",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "A basic Express API with GET/POST /memes routes, now using Prisma + PostgreSQL.",
  "scripts": {
    "prestart": "prisma migrate deploy",
    "start": "node index.js",
    "dev": "node --watch index.js",
    "postinstall": "prisma generate",
    "seed": "node prisma/seed.js",
    "db:seed": "npx prisma db seed",
    "db:generate": "npx prisma generate",
    "db:pull": "npx prisma db pull",
    "db:migrate:dev": "npx prisma migrate dev",
    "db:status": "npx prisma migrate status",
    "test": "cross-env NODE_ENV=test node --test"
  },
  "engines": {
    "node": ">=18 <23"
  },
  "keywords": [
    "express",
    "api",
    "memes",
    "node",
    "prisma",
    "postgresql"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^6.17.1",
    "bcrypt": "^6.0.0",
    "express": "^4.19.2",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.8.1",
    "cross-env": "^10.1.0",
    "nodemon": "^3.1.10",
    "prisma": "^6.17.1",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  }
}
