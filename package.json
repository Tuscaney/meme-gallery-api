{
  "name": "meme-gallery-api",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "A basic Express API with GET/POST /memes routes, now using Prisma + PostgreSQL + TypeScript.",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev:build": "tsc -w -p tsconfig.json",
    "dev:serve": "nodemon --watch dist --ext js,json --exec \"node dist/index.js\"",
    "prestart": "prisma migrate deploy",
    "start": "node dist/index.js",
    "postinstall": "prisma generate",
    "seed": "node prisma/seed.js",
    "db:seed": "npx prisma db seed",
    "db:generate": "npx prisma generate",
    "db:pull": "npx prisma db pull",
    "db:migrate:dev": "npx prisma migrate dev",
    "db:status": "npx prisma migrate status",
    "test": "cross-env NODE_ENV=test node --test"
  },
  "engines": {
    "node": "20.x"
  },
  "keywords": [
    "express",
    "api",
    "memes",
    "node",
    "prisma",
    "postgresql",
    "typescript"
  ],
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^6.17.1",
    "bcrypt": "^6.0.0",
    "express": "^4.19.2",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.30",
    "cross-env": "^10.1.0",
    "nodemon": "^3.1.0",
    "prisma": "^6.17.1",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  }
}
